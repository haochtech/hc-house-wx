.type-container {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    overflow: hidden;
    border-bottom: 1rpx solid #F2f2f2;
    padding-bottom: 10rpx;
}

.type-navbar {
    white-space: nowrap;
    height: 88rpx;
    background-color: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.type-box {
    width: 50%;
    box-sizing: content-box;
    font-size: 24rpx;
    line-height: 84rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}

.type-navbar-item {
    border-bottom: 4rpx solid #fff;
}

.type-item-on {
    border-bottom: 4rpx solid #e64340;
}

.container {
    background-color: #f5f5f5;
    min-height: 100%;
}

.container .orderlist {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    background: #FFF;
    margin-top: 10rpx;
}

.container .orderlist .orderid {
    border-bottom: 1rpx solid #efefef;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    padding-left: 20rpx;
    font-size: .8rem;
}

.container .orderlist .content {
    font-size: .8rem;
    border-bottom: 1rpx solid #efefef;
    display: flex;
    flex-direction: row;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
}

.container .orderlist .content .pic {
    width: 30%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.container .orderlist .content .pic image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
    align-self: center;
}

.container .orderlist .content .detail {
    width: 70%;
}

.container .orderlist .content .detail .item:nth-child(1) {
    font-size: .8rem;
    font-weight: 600;
}