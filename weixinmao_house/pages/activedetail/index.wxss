.container {
    background-color: #e5e5e5;
    min-height: 100%;
}

.swiper-container {
    width: 750rpx;
    position: relative;
}

.swiper_box {
    width: 100%;
    height: 362.5rpx;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 362.5rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    border-radius: 50%;
    transition: all .6s;
    opacity: .5;
}

.swiper-container .dots .dot.active {
    width: 14rpx;
    opacity: 1;
}

.container .header {
    display: flex;
    width: 750rpx;
    flex-direction: column;
    align-items: center;
    background: #FFF;
}

.container .header>image {
    width: 750rpx;
    height: 350rpx;
}

.container .main {
    display: flex;
    width: 750rpx;
    flex-direction: column;
    padding-bottom: 20rpx;
    background: #FFF;
}

.container .main .title {
    display: flex;
    width: 700rpx;
    flex-direction: column;
    padding-top: 20rpx;
    font-size: .9rem;
    padding-left: 30rpx;
}

.container .main .title view {
}

.container .main .title view:nth-child(1) {
    font-size: 1.1rem;
}

.container .main .title .price {
    display: flex;
    flex-direction: row;
}

.container .main .title .price view:nth-child(1) {
    font-size: .9rem;
    color: #d51a39;
}

.container .main .title .price view:nth-child(2) {
    font-size: .7rem;
    color: #FFF;
    background: #ff706a;
    border-radius: 3rpx;
    padding: 5rpx 20rpx;
    margin-left: 100rpx;
}

.container .main .address {
    display: flex;
    flex-direction: column;
    padding-left: 30rpx;
    font-size: .7rem;
    margin-top: 10rpx;
    color: #777676;
}

.container .main .special {
    width: 720rpx;
    display: flex;
    flex-direction: row;
    padding-left: 30rpx;
    margin-top: 20rpx;
    flex-wrap: wrap;
}

.container .main .special text {
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    font-size: .6rem;
    background: red;
    margin-right: 10rpx;
    color: #FFF;
    margin-bottom: 10rpx;
}

.container .main .special text:nth-child(2n) {
    background: #ecf2fe;
    color: #90a1cf;
}

.container .main .special text:nth-child(2n-1) {
    background: #e3f9e4;
    color: #7dac82;
}

.container .contentlist {
    margin-top: 10rpx;
    width: 750rpx;
    background: #FFF;
    display: flex;
    flex-direction: column;
}

.container .contentlist .title {
    width: 750rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: .9rem;
    border-bottom: 1rpx solid #efefef;
    display: flex;
    flex-direction: row;
    align-content: center;
}

.container .contentlist .title view:nth-child(1) {
    height: 40rpx;
    line-height: 40rpx;
    width: 6rpx;
    background: #3274e5;
    align-self: center;
}

.container .contentlist .title view:nth-child(2) {
    height: 80rpx;
    line-height: 80rpx;
    width: 150rpx;
    padding-left: 15rpx;
}

.container .contentlist .listitem {
    width: 750rpx;
    display: flex;
    flex-direction: column;
}

.container .contentlist .listitem .items {
    padding-left: 30rpx;
    color: #777676;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    font-size: .8rem;
    border-bottom: 1rpx dotted #e5e5e5;
}

.container .contentlist .listitem .items text {
    color: #000;
    padding-left: 10rpx;
}

.type-container {
    width: 100%;
    background-color: #fff;
    overflow: hidden;
}

.type-navbar {
    white-space: nowrap;
    background-color: #fff;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.type-box {
    padding-top: 10rpx;
    width: 250rpx;
    box-sizing: content-box;
    font-size: 24rpx;
    text-align: center;
    display: inline-block;
    overflow: hidden;
}

.type-box image {
    width: 230rpx;
    height: 230rpx;
}

.type-navbar-item {
    border-bottom: 4rpx solid #fff;
}

.type-item-on {
    border-bottom: 4rpx solid #e64340;
}

.weixinmao-float {
    height: 150rpx;
}

.weixinmao-foot {
    display: flex;
    justify-content: center;
    flex-direction: row;
    position: fixed;
    z-index: 999;
    left: 0;
    bottom: 0;
    width: 100%;
}

.weixinmao-foot view {
    color: #FFF;
    align-self: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: .9rem;
    display: flex;
    flex-direction: row;
    width: 50%;
    border-radius: 0rpx;
    padding-left: 30rpx;
}

.weixinmao-foot view:nth-child(1) {
    color: #FFF;
    align-self: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: .9rem;
    display: flex;
    flex-direction: row;
    background: #e64340;
}

.weixinmao-foot view:nth-child(2) {
    color: #FFF;
    align-self: center;
    height: 100rpx;
    line-height: 100rpx;
    font-size: .9rem;
    display: flex;
    flex-direction: row;
    background: #1aac19;
}

.weixinmao-foot view image {
    width: 70rpx;
    height: 70rpx;
    align-self: center;
}

.intro {
    padding: 10rpx;
    font-size: .8rem;
}

.weixinmao-msg {
    position: absolute;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: black;
    z-index: 2001;
    background: rgba(0,0,0,0.7);
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.weixinmao-content {
    width: 720rpx;
    height: 450rpx;
    z-index: 4001;
    background: #FFF;
    align-self: center;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.weixinmao-content .title {
    border-bottom: 1rpx solid #e5e5e5;
    width: 100%;
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    font-size: .8rem;
    background: #3274e5;
    color: #FFF;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.weixinmao-content .title view:nth-child(1) {
    width: 30%;
}

.weixinmao-content .title view:nth-child(2) {
    width: 40%;
}

.weixinmao-content .title view:nth-child(3) {
    width: 30%;
}

.weixinmao-content .content {
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: center;
    margin-top: 20rpx;
}

.weixinmao-content .content .item {
    font-size: .8rem;
    width: 100%;
    align-self: center;
    margin-bottom: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.inputlist {
    border: 1rpx solid #efefef;
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 4rpx;
    align-self: center;
}

.bindtel {
    width: 400rpx;
    background: #3274e5;
    color: #FFF;
    height: 80rpx;
    line-height: 80rpx;
}