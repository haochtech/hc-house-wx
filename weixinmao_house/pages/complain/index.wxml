<form reportSubmit bindsubmit="savepubinfo">
    <view class="container">
        <view class="main">
            <view class="list">
                <view class="item">
                    <view class="name">联 系 人</view>
                    <view class="selectitem">
                        <input name="name" placeholder="请填写联系人" type="text"></input>
                    </view>
                </view>
                <view class="item">
                    <view class="name">联系电话</view>
                    <view class="selectitem">
                        <input name="tel" placeholder="请填写联系电话" type="text"></input>
                    </view>
                </view>
            </view>
        </view>
        <view class="main">
            <view class="list">
                <view class="item">
                    <view class="selectitem" style="width:100%;">
                        <textarea name="content" placeholder="投诉内容"></textarea>
                    </view>
                </view>
            </view>
        </view>
        <view class="weixinmao-float">
            <view class="weixinmao-foot">
                <button class="footer" formType="submit">提交投诉</button>
            </view>
        </view>
    </view>
</form>
