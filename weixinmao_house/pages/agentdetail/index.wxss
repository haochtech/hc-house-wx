.container {
  background-color: #f5f5f5;
  min-height: 100%;
}

.container .header {
  width: 750rpx;
  height: 350rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.container .header .pic {
  width: 380rpx;
  height: 250rpx;
  align-self: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .header .pic image {
  width: 140rpx;
  height: 140rpx;
  border: 7rpx solid #fff;
  border-radius: 140rpx;
}

.container .header .pic view {
  height: 80rpx;
  line-height: 80rpx;
  width: 380rpx;
  text-align: center;
  color: #fff;
  font-size: 0.8rem;
}

.container .order {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.container .order .title {
  font-size: 1rem;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #efefef;
}

.container .order .content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #fff;
  padding: 20rpx;
  text-indent: 20rpx;
  font-size: 0.8rem;
}

.container .order .content .item {
  width: 250rpx;
  text-align: center;
  font-size: 0.8rem;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .order .content .item image {
  width: 100rpx;
  height: 100rpx;
}

.container .list {
  width: 750rpx;
  margin-top: 20rpx;
  background: #fff;
}

.container .list .item {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  font-size: 0.8rem;
  border-bottom: 1rpx solid #efefef;
  padding-left: 20rpx;
  color: #747474;
}

.type-container {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #f2f2f2;
  padding-bottom: 10rpx;
}

.type-navbar {
  white-space: nowrap;
  height: 88rpx;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.type-box {
  width: 375rpx;
  box-sizing: content-box;
  font-size: 0.8rem;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.type-navbar-item {
  border-bottom: 4rpx solid #fff;
}

.type-item-on {
  border-bottom: 4rpx solid #3274e5;
}

.newslist {
  display: flex;
  flex-direction: row;
  width: 720rpx;
  margin: 0 auto;
  border-bottom: 1px solid #efefef;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  background: #fff;
}

.newslist .pic {
  width: 35%;
  height: 220rpx;
  line-height: 220rpx;
  align-items: center;
  justify-content: center;
  display: flex;
}

.newslist .pic image {
  width: 260rpx;
  height: 210rpx;
}

.newslist .title {
  width: 65%;
  flex-direction: column;
  display: flex;
  justify-content: space-between;
  height: 200rpx;
}

.newslist .title .address {
  padding-left: 5%;
  text-align: left;
  font-size: 0.7rem;
  color: #000;
}

.newslist .title .housearea {
  padding-left: 5%;
  text-align: left;
  font-size: 0.7rem;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  color: #000;
}

.newslist .title .address text {
  color: #1aac19;
}

.newslist .title .perprice {
  padding-left: 5%;
  font-size: 0.7rem;
  color: #d65408;
  font-weight: bold;
}

.newslist .title .price {
  padding-left: 5%;
  text-align: left;
  font-size: 0.6rem;
  color: #6a6a6a;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  align-self: baseline;
  width: 450rpx;
}

.newslist .title .price view text {
  padding: 5rpx 7rpx;
  border-radius: 3rpx;
  margin-right: 5rpx;
  height: 20rpx;
  line-height: 20rpx;
  color: #77af6e;
  background: #f7f5f6;
}

.newslist .title .price .money {
  color: #d65408;
  font-weight: bold;
  font-size: 0.8rem;
  padding-right: 10rpx;
}

.weixinmao-foot {
  display: flex;
  justify-content: center;
  flex-direction: row;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: 0;
  width: 100%;
}

.weixinmao-foot view {
  color: #fff;
  align-self: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 0.9rem;
  display: flex;
  flex-direction: row;
  width: 50%;
  border-radius: 0rpx;
  padding-left: 30rpx;
}

.weixinmao-foot view:nth-child(1) {
  color: #fff;
  align-self: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 0.9rem;
  display: flex;
  flex-direction: row;
  background: #1aac19;
}

.weixinmao-foot view:nth-child(2) {
  color: #fff;
  align-self: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 0.9rem;
  display: flex;
  flex-direction: row;
  background: #e64340;
}

.weixinmao-foot view image {
  width: 70rpx;
  height: 70rpx;
  align-self: center;
}
